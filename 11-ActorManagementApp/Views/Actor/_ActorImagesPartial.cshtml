@model IEnumerable<string>

<div id="actor-images-container" class="mt-3">
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var imageName in Model)
            {
                @if (imageName == "No actor found" || imageName == "No images available")
                {
                    <h4>@imageName</h4>
                }
                else
                {
                    <div class="col-md-3 mb-2">
                        <img src="~/images-bio/@imageName" class="img-thumbnail" style="width:350px;" />
                    </div>
                }                
            }
        </div>
    }
    else
    {
        <h4>No image available</h4>
    }
</div>

