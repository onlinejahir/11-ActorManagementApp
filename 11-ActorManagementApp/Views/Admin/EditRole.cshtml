@model EditRoleVM
@{
    ViewData["Title"] = "Edit Role";
}

<h2>Edit Role</h2>

<div class="mt-3">
    <form asp-controller="Admin" asp-action="EditRole" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Id" class="form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Id" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RoleName" class="form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mt-3">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-outline-primary me-2">Update</button>
                <a asp-controller="Admin" asp-action="ListRoles" class="btn btn-primary">Cancel</a>
            </div>
        </div>
        <div class="card mt-3">
            <div class="card-header">
                <h4>Users in this role</h4>
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <h6 class="card-title">@user</h6>
                    }
                }
                else
                {
                    <h6 class="card-title">No user under this role</h6>
                }
            </div>
            <div class="card-footer mt-3">
                <a asp-controller="Admin" asp-action="EditUserInRole" asp-route-roleId="@Model.Id"
                class="btn btn-outline-primary">Add or remove users</a>
            </div>
        </div>
    </form>
</div>


