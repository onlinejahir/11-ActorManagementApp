@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "All Roles";
}

<h2 class="mb-3">All Roles</h2>

@if (Model.Any())
{
    <a asp-controller="Admin" asp-action="CreateRole" class="btn btn-primary mb-3">
        Add new role
    </a>
    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    @role.Name
                </h5>
            </div>
            <div class="card-footer">
                <a asp-controller="Admin" asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-secondary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title mb-3">
                Use the button below to create a role
            </h5>
            <a asp-controller="Admin" asp-action="CreateRole" class="btn btn-outline-primary">
                Create Role
            </a>
        </div>
    </div>
}
